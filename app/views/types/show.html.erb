<div class="page-header">
  <h3 class="pull-left">编辑设备类型</h3>
  <div class="btn-group pull-right">
  <%= link_to types_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_type_path(@type), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show type</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @type.name %></dd>

</dl>

<script>
  $('#type_link').addClass('active').siblings().removeClass('active');
</script>