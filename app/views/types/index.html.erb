<div class="page-header">
  <h3 class="pull-left">设备类型列表</h3>
  <div class="btn-group pull-right">
  <%= link_to new_type_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    添加
  <% end %>
</div></div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @types) do |type| %>
            <td><%= type.name %></td>
        <td><%= link_to '编辑', edit_type_path(type) %></td>
        <td><%= link_to '删除', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#type_link').addClass('active').siblings().removeClass('active');
</script>