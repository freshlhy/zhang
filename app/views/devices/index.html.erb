<div class="page-header">
  <h3 class="pull-left">设备简表</h3>
  <div class="btn-group pull-right">
    <%= link_to devices_path(format: "xls"), :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-export"></span>
      导出
    <% end %>
    <%= link_to new_device_import_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-import"></span>
      导入
    <% end %>
    <%= link_to new_device_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      新增
    <% end %>
  </div>
</div>

<table id="devices" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead> 
    <tr>
      <th>二级单位</th>
      <th>三级单位</th>
      <th>设备类型</th>
      <th>品牌</th>
      <th>型号</th>
      <th>投运日期</th>
      <th>使用部门</th>
      <th>使用人</th>
      <th>电话</th>
      <th>地点</th>
      <th>IP地址</th>
      <th>MAC地址</th>
      <th>操作系统版本</th>
      <th>备注</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @devices) do |device| %>
      <td><%= device.dept2nd %></td>
      <td><%= device.dept3rd %></td>
      <td><%= device.type.name %></td>
      <td><%= device.brand.name %></td>
      <td><%= device.model %></td>
      <td><%= device.commissioning %></td>
      <td><%= device.department.name %></td>
      <td><%= device.user %></td>
      <td><%= device.user_phone %></td>
      <td><%= device.location %></td>
      <td><%= device.ip %></td>
      <td><%= device.mac %></td>
      <td><%= device.os %></td>
      <td><%= device.note %></td>
      <td><%= link_to '查看', device %></td>
      <td><%= link_to '编辑', edit_device_path(device) %></td>
      <td><%= link_to '删除', device, method: :delete, data: { confirm: '你确定要删除?' } %></td>
    <% end %>
  </tbody>
</table>

<script>
  $('#device_link').addClass('active').siblings().removeClass('active');
</script>