<div class="page-header">
  <h3 class="pull-left">库存</h3>
  <div class="btn-group pull-right">
    <%= link_to inventories_path(format: "xls"), :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-export"></span>
      导出
    <% end %>
    <%= link_to new_inventory_import_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-import"></span>
      导入
    <% end %>
    <%= link_to new_inventory_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      新增
    <% end %>
  </div>
</div>

<table id="inventories" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead> 
    <tr>
      <th>设备类型</th>
      <th>品牌</th>
      <th>型号</th>
      <th>生产日期</th>
      <th>备注</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @inventories) do |inventory| %>
      <td><%= inventory.type.name %></td>
      <td><%= inventory.brand.name %></td>
      <td><%= inventory.model %></td>
      <td><%= inventory.production_date %></td>
      <td><%= inventory.note %></td>
      <td><%= link_to '查看', inventory %></td>
      <td><%= link_to '编辑', edit_inventory_path(inventory) %></td>
      <td><%= link_to '删除', inventory, method: :delete, data: { confirm: '你确定要删除?' } %></td>
    <% end %>
  </tbody>
</table>

<script>
  $('#inventory_link').addClass('active').siblings().removeClass('active');
</script>