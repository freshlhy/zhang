<div class="page-header">
  <h3 class="pull-left">设备品牌</h3>
  <div class="btn-group pull-right">
    <%= link_to new_brand_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      添加
    <% end %>
  </div>
</div>




<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>名称</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @brands) do |brand| %>
            <td><%= brand.name %></td>
        <td><%= link_to '编辑', edit_brand_path(brand) %></td>
        <td><%= link_to '删除', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#brand_link').addClass('active').siblings().removeClass('active');
</script>