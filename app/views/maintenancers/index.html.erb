<div class="page-header">
  <h3 class="pull-left">运维人员列表</h3>
  <div class="btn-group pull-right">
  <%= link_to new_maintenancer_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    添加
  <% end %>
</div></div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>姓名</th>
            <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @maintenancers) do |maintenancer| %>
            <td><%= maintenancer.name %></td>
        <td><%= link_to '编辑', edit_maintenancer_path(maintenancer) %></td>
        <td><%= link_to '删除', maintenancer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#maintenancer_link').addClass('active').siblings().removeClass('active');
</script>