<div class="page-header">
  <h3 class="pull-left">设备运维信息列表</h3>
  <div class="btn-group pull-right">
  <%= link_to devices_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    添加(转设备页)
  <% end %>
</div></div>

<table id="maintenances" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead> 
    <tr>
      <th>设备类型</th>
      <th>使用部门</th>
      <th>使用人</th>
      <th>地点</th>
      <th>维护时间</th>
      <th>维护人员</th>
      <th>事项</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <%= content_tag_for(:tr, @maintenances) do |maintenance| %>
        <td><%= maintenance.device.type.name %></td>
        <td><%= maintenance.device.department.name %></td>
        <td><%= maintenance.device.user %></td>
        <td><%= maintenance.device.location %></td>
        <td><%= maintenance.mdate %></td>
        <td><%= maintenance.maintenancer_names %></td>
        <td><%= maintenance.location %></td>
        <td><%= link_to '编辑', edit_maintenance_path(maintenance) %></td>
        <td><%= link_to '删除', maintenance, method: :delete, data: { confirm: '你确定要删除?' } %></td>
      <% end %>
  </tbody>
</table>

<script>
  $('#maintenance_link').addClass('active').siblings().removeClass('active');
</script>