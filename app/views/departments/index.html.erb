<div class="page-header">
  <h3 class="pull-left">部门列表</h3>
  <div class="btn-group pull-right">
    <%= link_to new_department_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      添加
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>名称</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @departments) do |department| %>
            <td><%= department.name %></td>
        <td><%= link_to '编辑', edit_department_path(department) %></td>
        <td><%= link_to '删除', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#department_link').addClass('active').siblings().removeClass('active');
</script>